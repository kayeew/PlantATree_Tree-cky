<div class="container">
	<h1><%= title %></h1>
	<% if (data) {
      let counter = 0;
      data.forEach(function(product) { %>
			 
  			<div class="col-lg-3 col-md-4" style="float left; display: inline-block;">
  				<!--Card-->
  				<div class="card" id="product-card<%- counter %>" style="min-height: 500px">
  					<!--Card image-->
  					<div class="view">
  						<a href="#productDetailModal<%- counter %>" data-toggle="modal">
                <img src="<%- product.imageURL %>" width="30px" ="150px" class="card-img-top" alt="photo">
  						  <div class="mask rgba-white-slight"></div>
  						</a>
  					</div>
  					<!--Card content-->
            <a href="#productDetailModal<%- counter %>" data-toggle="modal">
  					<div class="card-body">
  						<!--Title-->
  						<h4 class="card-title"><%- product.name %></h4>
  						<h4>
  							<span class="green-text"><strong>$<%- product.price %></strong></span>
  							<span class="grey-text"><small><s>$100</s></small></span>
  				        </h4>
  						<!--Text-->
  						<p class="card-text"><%- product.description %></p>

  						<button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#productDetailModal<%- counter %>">
                See More
              </button>
  					</div></a>
          </div>
          <!--/.Card-->
        <br>
        <!-- Product Details Modal -->
        <div class="modal fade" id="productDetailModal<%= counter %>" tabindex="-1" role="dialog" aria-labelledby="productDetailModal<%= counter %>"
          aria-hidden="true">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-body">
                <div class="row">
                  <div class="col-lg-5">
                    <!--Carousel Wrapper-->
                    <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails"
                      data-ride="carousel">
                      <!--Slides-->
                      <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                          <img class="d-block w-100"
                            src="<%= product.imageURL %>"
                            alt="First slide">
                        </div>
                        <!-- <div class="carousel-item">
                          <img class="d-block w-100"
                            src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/img%20(24).jpg"
                            alt="Second slide">
                        </div>
                        <div class="carousel-item">
                          <img class="d-block w-100"
                            src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/img%20(25).jpg"
                            alt="Third slide">
                        </div> -->
                      </div>
                      <!--/.Slides-->
                      <!--Controls-->
                      <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                      <!--/.Controls-->
                      <ol class="carousel-indicators">
                        <li data-target="#carousel-thumb" data-slide-to="0" class="active">
                          <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/img%20(23).jpg" width="60">
                        </li>
                        <li data-target="#carousel-thumb" data-slide-to="1">
                          <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/img%20(24).jpg" width="60">
                        </li>
                        <li data-target="#carousel-thumb" data-slide-to="2">
                          <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/img%20(25).jpg" width="60">
                        </li>
                      </ol>
                    </div>
                    <!--/.Carousel Wrapper-->
                  </div>
                  <div class="col-lg-7">
                    <h2 class="h2-responsive product-name">
                      <strong><%- product.name %></strong>
                    </h2>
                    <h4 class="h4-responsive">
                      <span class="green-text">
                        <strong><%- product.price %></strong>
                      </span>
                      <span class="grey-text">
                        <small>
                          <s>$100</s>
                        </small>
                      </span>
                    </h4>

                    <div>
                      <strong>Description:</strong>
                      <%- product.description %><br>

                      <strong>Category:</strong>
                      <%- product.category %><br>

                      <strong>Conditions Of Place:</strong>
                      <%- product.conditionsOfPlace %><br>

                      <strong>Maintance Requirements:</strong>
                      <%- product.maintanceRequirements %><br>

                      <strong>Max Height:</strong>
                      <%- product.maxHeight %><br>

                      <strong>Growth Rate:</strong>
                      <%- product.growthRate %><br>

                      <select class="md-form mdb-select colorful-select dropdown-primary">
                        <option value="" disabled selected>Select Quantity</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                      </select>
                    </div>
                    <!-- Add to Cart -->
                    <div class="card-body">
                      <div class="text-center">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button class="btn btn-primary">Add to cart
                          <i class="fas fa-cart-plus ml-2" aria-hidden="true"></i>
                        </button>
                      </div>
                    </div>
                    <!-- /.Add to Cart -->
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- End of Modal -->

      </div>
    <% counter++;
		  })
	  } %>


